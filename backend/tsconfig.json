{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "vitest/globals"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"],
      "@vitest/expect": ["./node_modules/@vitest/expect/dist/index.d.ts"],
      "@azure/msal-node": ["./node_modules/@azure/msal-node/lib/types/index.d.ts"],
      "@azure/msal-node/*": ["./node_modules/@azure/msal-node/lib/types/*"],
      "@azure/msal-common": ["./node_modules/@azure/msal-common/lib/types/index.d.ts"],
      "@azure/msal-common/*": ["./node_modules/@azure/msal-common/lib/types/*"],
      "@enterpriseglue/contracts": ["../packages/contracts/src/index.d.ts"],
      "@enterpriseglue/contracts/auth": ["../packages/contracts/src/auth.d.ts"],
      "@enterpriseglue/contracts/roles": ["../packages/contracts/src/roles.d.ts"],
      "@enterpriseglue/contracts/members": ["../packages/contracts/src/members.d.ts"],
      "@enterpriseglue/contracts/*": ["../packages/contracts/src/*"],
      "@enterpriseglue/enterprise-plugin-api": ["../packages/enterprise-plugin-api/src/index.d.ts"],
      "@enterpriseglue/enterprise-plugin-api/backend": ["../packages/enterprise-plugin-api/src/backend.d.ts"],
      "@enterpriseglue/enterprise-plugin-api/frontend": ["../packages/enterprise-plugin-api/src/frontend.d.ts"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["src/db/schema/drizzle-kit-schema.ts"]
}
