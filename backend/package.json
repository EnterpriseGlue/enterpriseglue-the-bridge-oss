{
  "name": "webmodeler-backend",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:skip-generate": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest --run --dir __tests__ --config vitest.config.ts",
    "test:integration": "vitest --run --dir test/integration --config vitest.config.ts",
    "db:migration:generate": "npx typeorm migration:generate -d dist/src/shared/db/data-source.js",
    "db:migration:run": "npx typeorm migration:run -d dist/src/shared/db/data-source.js",
    "db:migration:revert": "npx typeorm migration:revert -d dist/src/shared/db/data-source.js",
    "db:schema:sync": "npx typeorm schema:sync -d dist/src/shared/db/data-source.js"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.0",
    "@azure/msal-node": "^3.8.1",
    "@gitbeaker/rest": "^43.8.0",
    "archiver": "^7.0.0",
    "azure-devops-node-api": "^15.1.1",
    "bcryptjs": "^3.0.3",
    "bitbucket": "^2.12.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.12",
    "octokit": "^5.0.5",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.1",
    "simple-git": "^3.30.0",
    "sql.js": "^1.13.0",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.28",
    "undici": "^7.18.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@enterpriseglue/contracts": "file:../packages/contracts",
    "@types/archiver": "^6.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.7",
    "@vitest/coverage-v8": "^2.1.9",
    "supertest": "^7.1.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "vitest": "^2.1.9"
  },
  "overrides": {
    "esbuild": "^0.27.2",
    "cookie": "^0.7.0",
    "lodash": "^4.17.23"
  }
}
